<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>TinhHinhTron</servlet-name>
        <servlet-class>TinhHinhTron</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestConnection</servlet-name>
        <servlet-class>TestConnection</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>XemDanhSachHuman</servlet-name>
        <servlet-class>XemDanhSachHuman</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HumanTypeController</servlet-name>
        <servlet-class>controller.HumanTypeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThemLoaiMoi</servlet-name>
        <servlet-class>controller.ThemLoaiMoi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateHumanTypeController</servlet-name>
        <servlet-class>controller.UpdateHumanTypeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteController</servlet-name>
        <servlet-class>controller.DeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TinhHinhTron</servlet-name>
        <url-pattern>/TinhHinhTron</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestConnection</servlet-name>
        <url-pattern>/TestConnection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XemDanhSachHuman</servlet-name>
        <url-pattern>/XemDanhSachHuman</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Login.jsp</welcome-file>
    </welcome-file-list>
    <servlet-mapping>
        <servlet-name>HumanTypeController</servlet-name>
        <url-pattern>/dsCacLoai</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThemLoaiMoi</servlet-name>
        <url-pattern>/loaimoi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateHumanTypeController</servlet-name>
        <url-pattern>/update_loai</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteController</servlet-name>
        <url-pattern>/xoa_loai</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
